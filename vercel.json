{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/viewer/:brand/:model/:year/:section",
      "destination": "/viewer/[brand]/[model]/[year]/[sectionId]"
    }
  ]
}
